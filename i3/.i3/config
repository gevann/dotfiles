# Toggle cmus playback
bindsym $mod+space exec --no-startup-id cmus-remote -u
bindsym F11 exec --no-startup-id cmus-remote -u
# Cmus, next track
bindsym $mod+n exec --no-startup-id cmus-remote -n
bindsym F10 exec --no-startup-id cmus-remote -n
# Cmus, previous track
bindsym $mod+Shift+n exec --no-startup-id cmus-remote -r
bindsym F9 exec --no-startup-id cmus-remote -r
# Decrease system volume
#bindsym F7 exec amixer -q set Master 2dB- unmute
bindsym F7 exec pactl -- set-sink-volume 0 -2dB

# Increase system volume
#bindsym F8 exec amixer -q set Master 2dB+ unmute
bindsym F8 exec pactl -- set-sink-volume 0 +2dB
# Toggle system mute
bindsym $mod+Home exec amixer -D pulse set Master toggle

bindsym $mod+q exec xautolock -locker lock -locknow

# Window border
