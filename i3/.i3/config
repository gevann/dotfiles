        #status_command python3 /usr/local/lib/python3.5/dist-packages/powerline/bindings/i3/powerline-i3.py

        font pango:Inconsolata 11
	tray_output none
        output $lower_monitor
        status_command python3 ~/.i3/bumblebee-status/bumblebee-status -m ping cmus pasink pasource date time -p ping.address=www.juul.com -t yawn

        colors {
          #color class       border  back.   text
          focused_workspace  $kabul $mud_red $half_and_half
          inactive_workspace $dark_brown $dark_brown $mud_red
          urgent_workspace   $pancho $ny_pink $dark_brown
